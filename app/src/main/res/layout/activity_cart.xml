<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CartActivity">

    <include layout="@layout/toolbar_back"/>

    <TextView
        android:id="@+id/tv_not_login_cart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="로그인이 필요한 서비스입니다."
        android:textSize="15dp"/>


    <TextView
        android:id="@+id/tv_no_cart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="등록된 상품이 없습니다."
        android:textSize="15dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_cart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="vertical"
        android:background="@color/colorCartBackground">

        <LinearLayout
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="60"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/tv_cart_allcount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="70"
                android:paddingStart="10dp"
                android:gravity="center_vertical"
                android:textColor="@color/colorBlack"
                android:text="총 3개"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/tv_cart_allprice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:gravity="center_vertical"
                android:text="0000원"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/colorCartAllPrice"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_cart_purchase"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="주문 결제하기"
            android:textSize="15dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:background="@color/colorPurchaseBtn"/>
    </LinearLayout>

</LinearLayout>